<UserControl x:Class="PerformanceMonitor.CRControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerformanceMonitor"
             mc:Ignorable="d" SnapsToDevicePixels="True">
	<Grid Width="75" Height="40">
		<Grid VerticalAlignment="Top">
			<TextBlock Text="CPU:" Foreground="White" Margin="4,4,0,0" HorizontalAlignment="Left" Width="30" TextAlignment="Right"/>
			<TextBlock x:Name="cpu" Foreground="White" Text="0%" Margin="38,4,4,0" VerticalAlignment="Top"/>
		</Grid>
		<Grid VerticalAlignment="Bottom">
			<TextBlock Text="内存:" Foreground="White" Margin="4,0,4,4" HorizontalAlignment="Left" Width="30" TextAlignment="Right"/>
			<TextBlock x:Name="ram" Foreground="White" Text="0%" Margin="38,0,4,4" VerticalAlignment="Bottom"/>
		</Grid>
	</Grid>
</UserControl>
