<UserControl x:Class="PerformanceMonitor.NSControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerformanceMonitor"
             mc:Ignorable="d" SnapsToDevicePixels="True">
	<Grid Width="75" Height="40">
		<Grid VerticalAlignment="Top">
			<TextBlock Foreground="White" Text="↑" Margin="4,4,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
			<TextBlock x:Name="uploadSpeed" Foreground="White" Text="0" Margin="11,4,31,0" VerticalAlignment="Top" TextAlignment="Right"/>
			<TextBlock x:Name="uploadUnit" Foreground="White" Text="KB/s" Margin="0,6,4,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="26" FontSize="10"/>
		</Grid>
		<Grid VerticalAlignment="Bottom">
			<TextBlock Foreground="White" Text="↓" Margin="4,0,0,4" VerticalAlignment="Top" HorizontalAlignment="Left"/>
			<TextBlock x:Name="downloadSpeed" Foreground="White" Text="0" Margin="11,0,31,4" VerticalAlignment="Bottom" TextAlignment="Right"/>
			<TextBlock x:Name="downloadUnit" Foreground="White" Text="KB/s" Margin="0,2,4,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="26" FontSize="10"/>
		</Grid>
	</Grid>
</UserControl>
